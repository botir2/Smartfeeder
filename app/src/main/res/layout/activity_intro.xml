<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.ahqlab.jin.smartfeeder.IntroActivity">

    <ImageSwitcher
        android:id="@+id/img_switcher_intro_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="182dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/intro_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/img_switcher_intro_label"
        android:layout_marginTop="231dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="#ee6156"
        android:letterSpacing="-0.03"/>
    <ImageSwitcher
        android:id="@+id/img_switcher_intro_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_switcher_intro_label"
        android:layout_marginTop="231dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
